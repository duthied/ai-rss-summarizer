ANTHROPIC_API_KEY=sk-ant-your-key-here

# Testing Configuration (Optional)
# Limit number of feeds for faster testing (comment out for production)
# MAX_FEEDS=3

# Email Delivery (Optional)
# Set SEND_EMAIL=true to enable email delivery
SEND_EMAIL=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=your-email@gmail.com

# Deduplication Settings
DEDUP_ENABLED=true              # Enable/disable deduplication (default: true)
DEDUP_LOOKBACK_DAYS=7           # How many days of history to track (default: 7)
DEDUP_STATE_FILE=reports/.dedup_state.json  # State file location

# Other Optional Integrations
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
